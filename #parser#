def getuserid(user):
    cur = conn.cursor()
    cur.execute("SELECT id_user from t_user where login like ")
    rows = cur.fetchall()
    for row in rows:
        if (user == row[1]):
            return 1
    return 0

def checkuserexist(user):
    cur = conn.cursor()
    cur.execute("SELECT * from t_user")
    rows = cur.fetchall()
    for row in rows:
        if (user == row[1]):
            return 1
    return 0
---------------------------

def checkpassexist(password):
    cur = conn.cursor()
    cur.execute("SELECT * from t_password")
    rows = cur.fetchall()
    for row in rows:
        if (password == row[1]):
            return 1
    return 0

def checkuserexist(user):
    cur = conn.cursor()
    cur.execute("SELECT * from t_user")
    rows = cur.fetchall()
    for row in rows:
        if (user == row[1]):
            return 1
    return 0

